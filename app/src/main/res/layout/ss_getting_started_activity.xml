<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:overScrollMode="never"
            android:id="@+id/viewPager"
            android:layout_height="0dp"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:id="@+id/next_skip_layout"
        android:layout_height="45dp">

        <TextView
                android:id="@+id/skipTexView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Skip"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat"
                android:layout_marginLeft="12dp" />

        <LinearLayout
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">
            <View
                    android:background="@drawable/round_dot_selected"
                    android:layout_width="10dp"
                    android:id="@+id/dot_one"
                    android:layout_height="10dp"/>
            <View
                    android:layout_width="10dp"
                    android:layout_marginLeft="9dp"
                    android:id="@+id/dot_two"
                    android:background="@drawable/round_dot_unselected"
                    android:layout_height="10dp"/>
            <View
                    android:layout_width="10dp"
                    android:id="@+id/dot_three"
                    android:background="@drawable/round_dot_unselected"
                    android:layout_marginLeft="9dp"
                    android:layout_height="10dp"/>
            <View
                android:layout_width="10dp"
                android:id="@+id/dot_four"
                android:background="@drawable/round_dot_unselected"
                android:layout_marginLeft="9dp"
                android:layout_height="10dp"/>
        </LinearLayout>

        <TextView
                android:id="@+id/nextTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="12dp"
                android:fontFamily="@font/montserrat"
                android:text="Next"
                android:textColor="@color/primaryColor"
                android:textSize="16sp"
                android:layout_marginRight="12dp" />
    </LinearLayout>

</LinearLayout>