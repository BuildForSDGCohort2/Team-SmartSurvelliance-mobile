<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:id="@+id/slideImageView"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_width="match_parent"
            app:srcCompat="@mipmap/ss_logo"
            android:layout_height="300dp"
            />

    <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:textSize="22sp"
            android:layout_height="wrap_content"
            tools:text="Notify You of Intruders" />

    <TextView
            android:layout_width="match_parent"
            android:id="@+id/textViewDescription"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="@android:dimen/app_icon_size"
            android:layout_marginTop="12dp"
            tools:text="Get notified of intruders who get close to your store or home"
            android:layout_height="wrap_content"/>
</LinearLayout>